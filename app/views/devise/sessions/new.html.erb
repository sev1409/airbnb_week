<h2 class="log-in">Log in</h2>
<div class="form-styled">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.label :email, class: "label-email" %>
      <%= f.input :email, label: false, required: false, autofocus: true, input_html: {class: "form-control email-input"}%>
      <%= f.label :password, class: "label-password"%>
      <%= f.input :password, label: false, required: false, input_html: {class: "form-control password-input"}%>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-danger" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>


