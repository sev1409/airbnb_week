<div>
  <%= form_tag(puppies_path, method: :get) do %>
    <%= text_field_tag :query %>
    <%= submit_tag 'Search' %>
  <% end %>
</div>


<div class="main-container">
  <div class="cards-container">
      <% @puppies.each do |puppy| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="card" style="background-image: url(#)">
            <%= link_to puppy.name, puppy_path(puppy) %>
            <% if puppy.photo? %>
              <%= cl_image_tag puppy.photo.path, width: 200, height: 300, crop: :fill %>
            <% end %>
          </div>
        </div>
      <% end %>
  </div>

    <div id="map"></div>
</div>

<script>
  function initMap() {
    // Create a map object and specify the DOM element for display.
    var map = new google.maps.Map(document.getElementById('map'), {
      center: {lat: 52.5206, lng: 13.4098},
      scrollwheel: false,
      zoom: 8
    });
  }
</script>
<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<!-- Gmaps JavaScript -->
<script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCzER7O10ZOUp7FloJzMe2r8X1GIQhgt7Q&callback=initMap">
</script>
