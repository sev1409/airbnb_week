<div class="header">
  <div class="navbar-wagon">
    <!-- Logo -->
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <%= image_tag "logo.png" %>
    <% end %>

    <!-- Right Navigation -->
    <div class="navbar-wagon-right hidden-xs hidden-sm">

      <% if user_signed_in? %>

        <!-- Links when logged in -->
        <%= link_to "Add a puppy", new_puppy_path, class: "navbar-wagon-item navbar-wagon-link" %>

        <%= link_to "Bookings", user_bookings_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %>

        <!-- Avatar with dropdown menu -->
        <div class="navbar-wagon-item">
          <div class="dropdown">
            <% if current_user.facebook_picture_url? %>
            <%= image_tag current_user.facebook_picture_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
            <% elsif current_user.photo? %>
            <%= cl_image_tag current_user.photo.path, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
            <% else %>
            <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
            <% end %>
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <li>
                <%= link_to user_path(current_user) do %>
                  <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      <% else %>
        <!-- Login link (when logged out) -->
        <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>
    </div>
  </div>

  <div class="banner index">
    <div class="banner_content">
      <h1>Foon</h1>
      <h2>Give your dog a bone</h2>
      <h2>Snatch your match</h2>
      <div class="text-center padded">
        <div>
          <%= form_tag(puppies_path, method: :get) do %>
            <div>
              <%= text_field_tag :query, nil, :placeholder => 'Where do you need a puppy ?', class: "search-field", :onclick => 'if($(this).val()=="Enter search term..."){$(this).val("");};' %>
            </div>
            <div>
              <%= submit_tag 'Snatch it !', class: "btn-pink" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>

<div class="container">
  <div class="pictos">
    <div class="picto">
      <%= image_tag "dog-in-front-of-a-man.png" %>
      <h3>Find a puppy</h3>
    </div>
    <div class="picto">
      <%= image_tag "walking-with-dog.png" %>
      <h3>Walk it</h3>
    </div>
    <div class="picto">
      <%= image_tag "family-group-of-father-and-mother-with-two-babies-and-a-dog.png" %>
      <h3>Match</h3>
    </div>
  </div>

  <div class="testymonies">
    <div class="testymony-1">
      <%= image_tag "guy-with-puppy.jpg", class: "picture-home" %>
      <p class="text-center">Popy was a real chick magnet ! <br> If you look for a snatch, Foon is the best !</p>
    </div>
    <div class="testymony-2">
      <p class="text-center">I had the best experience thanks to boule de neige ! <br> I finaly feel complete !</p>
      <%= image_tag "girl-with-puppy.jpg", class: "picture-home" %>
    </div>
  </div>
</div>


